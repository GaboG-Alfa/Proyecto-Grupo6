@{
    ViewBag.Title = "Buscar por características";
}

<style>
    .form-group {
        margin: 1rem 0;
    }
</style>

@using (Html.BeginForm("BuscarCaracteristica", "ClienteProductos", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="feature1">Característica 1:</label>
        <input type="text" id="feature1" name="feature1" class="form-control" />
    </div>

    <div class="form-group">
        <label for="feature2">Característica 2:</label>
        <input type="text" id="feature2" name="feature2" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
}

<div>
    @Html.ActionLink("Regresar al Catálogo", "Index", "ClienteProductos")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}