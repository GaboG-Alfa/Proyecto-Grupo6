@model Models.Direcciones

@{
    ViewBag.Title = "Compra";
}

<h2>Checkout</h2>

@using (Html.BeginForm("Compra", "ClienteProductos", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        @Html.TextBoxFor(model => model.Usuarios.Nombre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Direccion">Dirección:</label>
        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Ciudad">Ciudad:</label>
        @Html.TextBoxFor(model => model.Ciudad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Estado">Estado:</label>
        @Html.TextBoxFor(model => model.Estado, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="CodigoPostal">Código Postal:</label>
        @Html.TextBoxFor(model => model.CodigoPostal, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Pais">País:</label>
        @Html.TextBoxFor(model => model.Pais, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="TarjetaCredito">Tarjeta de Crédito/Débito:</label>
        <input type="text" id="TarjetaCredito" name="TarjetaCredito" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Confirmar Compra</button>
}