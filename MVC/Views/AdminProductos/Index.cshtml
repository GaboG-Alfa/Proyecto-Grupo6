@model IEnumerable<Models.Productos>
@{
    ViewBag.Title = "Administración Productos";
}

<h2>Lista de Administración de Vuelos </h2>
@Html.ActionLink("Agregar Vuelo", "Create")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaID)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaID)
            </td>
        </tr>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ProductoID }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.ProductoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoID })
        </td>

    }
</table>

