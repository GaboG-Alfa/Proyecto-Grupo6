@model Models.Categorias
@{
    ViewBag.Title = "Detalles de la Categoría";
}

<h2>Detalles de la Categoría</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoriaID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoriaID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Productos)
        </dt>
        <dd>
            @if (Model.Productos != null && Model.Productos.Count > 0)
            {
                <ul>
                    @foreach (var producto in Model.Productos)
                    {
                        <li>@producto.Nombre</li>
                    }
                </ul>
            }
            else
            {
                <p>No hay productos asociados a esta categoría.</p>
            }
        </dd>
    </dl>
    <div class="form-actions no-color">
        @Html.ActionLink("Editar", "Edit", new { id = Model.CategoriaID }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Eliminar", "Delete", new { id = Model.CategoriaID }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Volver a Administración de Categorías", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>


